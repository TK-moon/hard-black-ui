{
  "name": "hard-black-ui",
  "version": "1.0.0",
  "main": "public/electron.js",
  "author": "TK",
  "license": "MIT",
  "scripts": {
    "start": "webpack serve --config ./webpack/webpack.config.js",
    "build:local": "webpack --config ./webpack/webpack.config.js",
    "build:dev": "webpack --mode development --config ./webpack/webpack.config.js",
    "build:prod": "webpack --mode production --config ./webpack/webpack.config.js",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -s public",
    "test": "TZ=Asia/Seoul jest",
    "test:watch": "npm run test -- --watch",
    "electron:start": "wait-on http://localhost:6006 && electron .",
    "electron:build": "electron-builder -c.extraMetadata.main=public/electron.js"
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "core-js": "^3.25.1",
    "electron-is-dev": "^2.0.0",
    "emotion": "^11.0.0",
    "emotion-reset": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-interactions": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addons": "^6.5.12",
    "@storybook/builder-webpack4": "^6.5.12",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/manager-webpack4": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/testing-react": "^1.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.1.1",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "electron": "^21.0.1",
    "electron-builder": "^23.6.0",
    "esbuild-loader": "^2.20.0",
    "eslint": "^8.23.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.4",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "prettier": "^2.7.1",
    "storybook": "^6.5.12",
    "storybook-dark-mode": "^1.1.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.3",
    "wait-on": "^6.0.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.0",
    "webpack-merge": "^5.8.0"
  },
  "build": {
    "productName": "HB-UI",
    "appId": "com.hard-black-ui.electron",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ]
    },
    "dmg": {
      "title": "HB-UI"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "perMachine": true,
      "language": 1042,
      "installerIcon": "build/icons/icon.ico",
      "shortcutName": "HB-UI",
      "artifactName": "HB-UI-${version}.${ext}",
      "uninstallDisplayName": "NB"
    },
    "directories": {
      "output": "./dist/"
    }
  }
}
