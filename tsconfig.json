{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "incremental": true
  },
  "include": [
    "**/*.js",
    "*.js",
    "src/*.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../graphql.config.js",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules"]
}
