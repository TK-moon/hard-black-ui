{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "incremental": true,
    "downlevelIteration": true
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules"],
}
